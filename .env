# Git Assistant MCP Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# LLM API Configuration
# =============================================================================

# Choose your LLM provider: "openai" or "anthropic"
LLM_PROVIDER=gemini

# OpenAI Configuration
GOOGLE_API_KEY=AIzaSyC4Op_Tmo_onhkqqeZtBtkq3byMFwfuG-Y
GOOGLE_MODEL_NAME=gemini-2.5-flash
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL_NAME=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=1000

# =============================================================================
# Git Configuration
# =============================================================================

# Git operation timeout in seconds
GIT_TIMEOUT=30

# Maximum number of recent commits to analyze
MAX_COMMITS=5

# Enable safe mode (warns about destructive operations)
SAFE_MODE=true

# =============================================================================
# UI Configuration
# =============================================================================

# Enable colored output
ENABLE_COLORS=true

# Verbose logging output
VERBOSE_OUTPUT=false

# =============================================================================
# Security Configuration
# =============================================================================

# Enable command validation
ENABLE_COMMAND_VALIDATION=true

# Log all executed commands
LOG_COMMANDS=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Enable caching of Git state
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=300

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Test mode (disables actual Git operations)
TEST_MODE=false
